<html lang="pl">
<head>
    <meta charset="UTF-8"/>
    <title>księgarnia</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheet.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
    <script type="text/javascript" src="{{ asset('jquery-3.5.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('sticky.js') }}"></script>
    <script src="{{  asset('https://www.google.com/recaptcha/api.js') }}"></script>
</head>
<body>
<header id="header_main">
    <div id="header_block">
        <div id="header_title">
            <div id="main_tile">Witaj w księgarni internetowej!</div>
            <div id="login_info">
                {% if logged != NULL %}
                    <div>
                        <div>Zalogowano: {{ login }}</div>
                        <div><a href="/user" style="text-decoration: underline;">moje konto</a></div>
                    </div>
                {% else %}
                    Nie Zalogowano
                {% endif %}
            </div>
        </div>
        <div id="main_menu_container">
            <section id="main_menu">
                <ol id="menu_option">
                    <li> <div>Książki</div>
                        <ol>
                            <li onclick="redirect('ksiazka','kryminal')"> Kryminały </li>
                            <li onclick="redirect('ksiazka','fantasy')"> Fantasy </li>
                            <li onclick="redirect('ksiazka','przygodowa')"> Przygodowe </li>
                            <li onclick="redirect('ksiazka','romans')"> Romanse </li>
                            <li onclick="redirect('ksiazka','literatura-piekna')"> Literatura Piękna </li>
                        </ol>
                    </li>
                    <li> <div>Gry planszowe</div>
                        <ol>
                            <li onclick="redirect('gra','rodzinne')"> Rodzinne </li>
                            <li onclick="redirect('gra','imprezowe')"> Imprezowe </li>
                            <li onclick="redirect('gra','serialowe')"> Serialowe </li>
                            <li onclick="redirect('gra','dla-dzieci')"> Dla Dzieci </li>
                            <li onclick="redirect('gra','erotyczne')"> Erotyczne </li>
                        </ol>
                    </li>
                    <li> <div>Inne produkty</div>
                        <ol>
                            <li onclick="redirect('inne','ozdoba')"> Ozdoby </li>
                            <li onclick="redirect('inne','film-na-cd')"> Filmy na CD </li>
                            <li onclick="redirect('inne','maskotka')"> Maskotki </li>
                            <li onclick="redirect('inne','scyzoryk')"> Scyzoryki </li>
                            <li onclick="redirect('inne','zabawka')"> Zabawki </li>
                        </ol>
                    </li>
                    <li> <div>Kontakt</div>
                        <ol>
                            <li>Telefon</li>
                            <li>E-mail</li>
                            <li>Nasz Adres</li>
                        </ol>

                    </li>
                    <li>
                        <div id="log_in_or_out">
                            {% if logged != NULL %}
                                Wyloguj
                            {% else %}
                                Zaloguj
                            {% endif %}
                        </div>
                    </li>
                </ol>
                <div style="clear: both"></div>
            </section>
        </div>
    </div>

</header>
        <article style="text-align: center;">
            <div id="form_container">
                <form id="login_form" action="" method="post">
                    <div> Podaj email </div>
                    <input type="text" name="user_email" id="email_field" value="{{ user_email }}"/>
                    {% if email_error is defined and email_error != NULL %}
                        <div id="post_email_error" style="color:red"> {{ email_error }} </div>
                    {% endif %}
                    <div id="email_test"></div>
                    <div> Podaj login </div>
                    <input name="user_login" id="user_login" value="{{ user_login }}">
                    {% if login_error is defined and login_error != NULL %}
                        <div id="post_login_error" style="color:red"> {{ login_error }} </div>
                    {% endif %}
                    <div id="login_test"></div>
                    <div id="podaj_haslo"> Podaj hasło </div>
                    <input type="password" name="user_password_1" id="password_1_id" value="{{ password_1 }}">
                    {% if password_error_1 is defined and password_error_1 != NULL%}
                        <div id="post_password_1_error" style="color:red"> {{ password_error_1 }} </div>
                    {% endif %}
                    <div id="password_test_1"></div>
                    <div> Powtórz hasło </div>
                    <input type="password" name="user_password_2" id="password_2_id" value="{{ password_2 }}">
                    <br>
                    {% if password_error_2 is defined and password_error_2 != NULL %}
                        <div id="post_pasword_2_error" style="color:red"> {{ password_error_2 }} </div>
                    {% endif %}
                    <div id="password_test_2"></div>
                    <label for="accept">Akceptuję Regulamin</label>
                    <input type="checkbox" name="acceptation"/>
                    {% if reg_error is defined and reg_error != NULL %}
                        <div style="color:red"> {{ reg_error }} </div>
                    {% endif %}
                    <div class="g-recaptcha" data-sitekey="6LftqcMZAAAAADyCFvsd6eiWlG8UAbTb37voJKiS"></div>
                    {% if captcha_error is defined and captcha_error != NULL%}
                        <div style="color:red"> {{ captcha_error }} </div>
                    {% endif %}
                    <input type="submit" value="Zarejestruj"/>
                </form>

            </div>
        </article>



    </body>

</html>