<html lang="pl">
<head>
    <meta charset="UTF-8"/>
    <title>księgarnia</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheet.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
    <script type="text/javascript" src="{{ asset('jquery-3.5.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('sticky.js') }}"></script>
</head>
<body>
<script>
    var logged = {% if logged != NULL %} true {% else %} false {% endif %};
    if(logged)  var login = '{{ login }}';
    else var login = null;
    var address = '{{ address }}';
    var email = '{{ email }}';
</script>
<header id="header_main">
    <div id="header_block">
        <div id="header_title">
            <div id="main_tile">Witaj w księgarni internetowej!</div>
            <div id="login_info">
                {% if logged != NULL %}
                    <div>
                        <div>Zalogowano: {{ login }}</div>
                        <div><a href="/user" style="text-decoration: underline;">moje konto</a></div>
                    </div>
                {% else %}
                    Nie Zalogowano
                {% endif %}
            </div>
        </div>
        <div id="main_menu_container">
            <section id="main_menu">
                <ol id="menu_option">
                    <li> <div>Książki</div>
                        <ol>
                            <li onclick="redirect('ksiazka','kryminal')"> Kryminały </li>
                            <li onclick="redirect('ksiazka','fantasy')"> Fantasy </li>
                            <li onclick="redirect('ksiazka','przygodowa')"> Przygodowe </li>
                            <li onclick="redirect('ksiazka','romans')"> Romanse </li>
                            <li onclick="redirect('ksiazka','literatura-piekna')"> Literatura Piękna </li>
                        </ol>
                    </li>
                    <li> <div>Gry planszowe</div>
                        <ol>
                            <li onclick="redirect('gra','rodzinne')"> Rodzinne </li>
                            <li onclick="redirect('gra','imprezowe')"> Imprezowe </li>
                            <li onclick="redirect('gra','serialowe')"> Serialowe </li>
                            <li onclick="redirect('gra','dla-dzieci')"> Dla Dzieci </li>
                            <li onclick="redirect('gra','erotyczne')"> Erotyczne </li>
                        </ol>
                    </li>
                    <li> <div>Inne produkty</div>
                        <ol>
                            <li onclick="redirect('inne','ozdoba')"> Ozdoby </li>
                            <li onclick="redirect('inne','film-na-cd')"> Filmy na CD </li>
                            <li onclick="redirect('inne','maskotka')"> Maskotki </li>
                            <li onclick="redirect('inne','scyzoryk')"> Scyzoryki </li>
                            <li onclick="redirect('inne','zabawka')"> Zabawki </li>
                        </ol>
                    </li>
                    <li> <div>Kontakt</div>
                        <ol>
                            <li>Telefon</li>
                            <li>E-mail</li>
                            <li>Nasz Adres</li>
                        </ol>

                    </li>
                    <li>
                        <div id="log_in_or_out">
                            {% if logged != NULL %}
                                Wyloguj
                            {% else %}
                                Zaloguj
                            {% endif %}
                        </div>
                    </li>
                </ol>
                <div style="clear: both"></div>
            </section>
        </div>
    </div>

</header>
<article>
    <div id="main_user_site">
        <div>
            <div id="user_menu" class="menu_product_class">
                <div class="product_button_2 product_button_3" id="user_button_1">Dane konta</div>
                <div class="product_button_2 product_button_3 pressed" id="user_button_2"> Zakupy </div>
            </div>
            <div id="user_data" class="main_product_class">
                <div id="login_container" class="user_container"> 
                    <div>Login:   </div>
                    <div class="data user_inner">{{ login }}</div>
                    <div class="edit_button user_inner" id="login_button">Edytuj</div>
                    <div style="clear: both;" class="clear_both"></div>
                    </div>
                <div id="email_container" class="user_container"> 
                    <div>Email:    </div>
                    <div class="data user_inner">{{ email }}</div>
                    <div class="edit_button user_inner" id="email_button">Edytuj</div>
                    <div style="clear: both;" class="clear_both"></div>
                    </div>
                <div id="address_container" class="user_container"> 
                    <div>Adres:    </div>
                    <div class="data user_inner">{{ address }}</div>
                    <div class="edit_button user_inner" id="address_button">Edytuj</div>
                    <div style="clear: both;" class="clear_both"></div>
                    </div>
            </div>

        </div>
    </div>
</article>



</body>

</html>